<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="globalSpinner" class="spinner-container" style="display: none;">
        <div class="centered-spinner"></div>
    </div>
    @if (Session["UserAutenticate"]?.ToString() == "true")
    {
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
          
        </nav>

        <div class="sidebar" id="sidebar">
            
        </div>

            <div class="main-content" id="mainContent">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="fixed-footer d-flex align-items-center justify-content-center">
                <div>
                    &copy; @DateTime.Now.Year - Ing. Juan Carlos Carcamo Riveros.
                </div>
            </footer>
            }
            else
            {
            <!-- Solo contenido para usuarios no autenticados -->
            @RenderBody()
            }


            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/Content/site.js")
            @RenderSection("scripts", required: false)
</body>
</html>
